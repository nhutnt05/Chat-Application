extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-user.pug

    .row
      .col-12
        +box-head("Lời mời kết bạn")

    .row(data-infoUser-accept=user.id)
      each user in users
        .col-6(user-id = user.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src=(user.avatar ? user.avatar : "/images/avatar.jpg")
                alt=user.fullName
              )

            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-accept-friend=user.id
                ) Xác nhận
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-refuse-friend=user.id
                ) Xóa
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-deleted-friend
                  disabled
                ) Đã xóa yêu cầu           
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-accepted-friend
                  disabled
                ) Đã chấp nhận lời mời...
block script
  script( src="/js/users.js")
extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1.login-title Đăng nhập tài khoản
        form.login-form(
          action="/user/login"
          method="POST"
        )
          div.form-group
            label(for="email").form-label Email
            input(
              type="email"
              class="form-input"
              id="email"
              name="email"
              required
            )
          div.form-group
            label(for="password").form-label Mật khẩu
            input(
              type="password"
              class="form-input"
              id="password"
              name="password"
              required
            )
          div.form-group
            button(type="submit" class="form-button") Đăng nhập
        a.forgot-link(href="/user/password/forgot") Quên mật khẩu?
